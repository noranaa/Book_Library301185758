<%-include ../partials/header.ejs%>


  <div class="container">
    <div class="row">
      <div class="offset-nd-1 col-nd-10">
        <h1>
          <%=title%>
        </h1>
        <form class="form" method="post">

          <div class="form-group">
            <label for="nameTextField">Add a title</label> <input type="text" class="form-control" id="nameTextField"
              placeholder="Enter book title" name="title" value="<%= books.Title %>" required>
          </div>
         

          <div class="form-group">
            <label for="priceTextField">enter book price</label> <input type="text" class="form-control"
              id="priceTextField" placeholder="Enter price" name="price" value="<%= books.Price %>" required>
          </div>


          <div class="form-group">
            <label for="authorTextField">Enter book author</label> <input type="text" class="form-control"
              id="authorTextField" placeholder="Enter book author" name="author" value="<%= books.Author %>" required>
          </div>

          <div class="form-group">
            <label for="genreTextField">Add book genre</label> <input type="text" class="form-control"
              id="genreTextField" placeholder="Enter book genre" name="genre" value="<%= books.Genre %>" required>
          </div>

      </div>
      <button class="btn btn-primary" type="submit">
        <i class="fa fa-edit"></i>
        submit</button> <a href="/book_lib" class="btn btn warning">
        <i class="fa fa-undo"></i>
        Cancel</a>
      </form>
    </div>
  </div>